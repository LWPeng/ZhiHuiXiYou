<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 设置其编辑框的上下左右的间距 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
    <!-- 设置其弧度 -->
    <corners
        android:radius="10dp"/>
    <stroke
        android:width="2dp"/>
    <solid
        android:color="@color/color_7"/>
</shape>