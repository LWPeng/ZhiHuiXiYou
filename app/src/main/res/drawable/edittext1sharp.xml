<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 设置其编辑框的上下左右的间距 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"/>
    <!-- 设置其弧度 -->
    <corners
        android:radius="10dp"/>
    <stroke
        android:width="2dp"
        android:color="#BDBDBD"/>
    <solid
        android:color="#d7d4d4"/>
</shape>